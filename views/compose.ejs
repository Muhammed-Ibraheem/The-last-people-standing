<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
  <label>Title</label>
  <input class="form-control" type="text" name="postTitle" value="">
  </div>
  <div class="form-group">
    <label>Post</label>
    <textarea class="form-control" type="text" name="postBody" rows="8" cols="80"></textarea>
